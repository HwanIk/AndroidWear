<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signinContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antonioleiva.wearcook.signIn"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/signin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/logUserName"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/login_edit"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:textColorHint="#ff9a9a9a"
            android:hint="아이디를 입력하세요"/>
        <EditText
            android:id="@+id/logPassword"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:background="@drawable/login_edit"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:textColorHint="#ff9a9a9a"
            android:password="true"
            android:hint="비밀번호를 입력하세요"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sign_in"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:src="@drawable/login"
            android:layout_gravity="center"
            android:onClick="btn_login"/>
        <ImageView
            android:id="@+id/goSignIn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/signin_img"
            android:onClick="sign_up"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/fbLoginBtn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:src="@drawable/facebook_login"
            android:layout_gravity="center"
            android:onClick="login_facebook"/>
    </LinearLayout>
</LinearLayout>
