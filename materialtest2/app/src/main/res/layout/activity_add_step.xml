<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_upload_edittext">
            <ImageView
                android:id="@+id/addStep_postTitle_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#64000000"/>
            <TextView
                android:id="@+id/addStep_postTitle_title"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:text="제목입니다"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/addStep_postTitle_subTitle"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:text="소제목입니다 블라블라"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/next_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">
                <ImageView
                    android:id="@+id/pre_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pre_icon"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pre_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical">
                <ImageView
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addStep_addStepImageItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지포함"
            android:onClick="addStepImageItem"/>
        <Button
            android:id="@+id/addStep_addStepTextItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트만"
            android:onClick="addStepTextItem"/>
        <Button
            android:id="@+id/addStep_addMatDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재료추가"
            android:onClick="addStepAddMat"/>
        <Button
            android:id="@+id/addStep_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업로드"
            android:onClick="post"/>
    </LinearLayout>
    <ListView
        android:id="@+id/addStep_addMatListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <ListView
        android:id="@+id/addStep_addStepListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    </ListView>


</LinearLayout>