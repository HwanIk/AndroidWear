<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/upload_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="표지만들기 - postTitle 액티비티"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/postTitle_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:onClick="postTitle_image"
        />
    <EditText
        android:id="@+id/postTitle_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" 제목을 입력하세요"/>
    <EditText
        android:id="@+id/postTitle_subTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" 소제목을 입력하세요"/>
    <Button
        android:id="@+id/postTitle_nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:onClick="postTitle_nextButton"/>


</LinearLayout>